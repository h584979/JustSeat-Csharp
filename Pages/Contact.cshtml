@page
@model ContactModel
@using Microsoft.AspNetCore.Identity
@section Scripts
{
<script src='https://www.google.com/recaptcha/api.js'></script>
<partial name="_ValidationScriptsPartial" />
}
@inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager


        <header id="header" class="alt">
            <a asp-page="/Index">
                <h1 style="color:#2c3e50;"><strong>Bordbestilling</strong> by Team 10</h1>
            </a>
            <nav id="nav">
                <ul>
                    @if (SignInManager.IsSignedIn(User))
                    {
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new {
                        area="" })" method="post" id="logoutForm" class="navbar-right">
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Logged in as
                                    @UserManager.GetUserName(User)!</a>
                            </li>
                            <li>
                                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logg ut</button>
                            </li>
                        </ul>
                    </form>
                    }
                    else
                    {
                    <li><a asp-area="Identity" asp-page="/Account/Login" class="button small">Logg inn</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Register" class="button small">Registrer deg</a></li>
                    }
                </ul>
            </nav>
        </header>

        <a href="#menu" class="navPanelToggle"><span class="fa fa-bars"></span></a>

        <section id="main" class="wrapper">
            <div class="container" style="text-align: center;">
                <h3 class="titleAuth">Kontakt oss</h3>

                <form method="post" style="width:60%;margin:0 auto;">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label for="nameInput" style="float:left;">Navn</label>
                        <input id="nameInput" asp-for="Contact.Name" type="text" class="form-control"
                            aria-describedby="emailHelp" placeholder="Skriv inn navn">
                        <span asp-validation-for="Contact.Name"></span>
                    </div>
                    <div class="form-group">
                        <label for="emailInput" style="float:left;">Email</label>
                        <input id="emailInput" asp-for="Contact.Email" type="email" class="form-control"
                            aria-describedby="emailHelp" placeholder="Skriv inn email">
                        <span asp-validation-for="Contact.Email"></span>
                    </div>

                    <div class="form-group">
                        <label for="messageInput" style="float:left;">Melding</label>
                        <textarea id="messageInput" asp-for="Contact.Message" class="form-control"
                            aria-describedby="emailHelp" placeholder="Skriv inn meldingen din her"></textarea>
                        <span asp-validation-for="Contact.Message"></span>
                    </div>
                    <div class="form-group">
                        <div class="g-recaptcha" data-sitekey="6LdQTrcUAAAAAFD2ohz29TD_pie-CKrZ1cesw-z0">
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="button special">
                            Send
                        </button>
                    </div>
            </div>
            </form>
            </div>
        </section>